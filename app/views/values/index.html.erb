<h1>Listing values</h1>

<table>
  <tr>
    <th>User</th>
    <th>Encrypted data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @values.each do |value| %>
  <tr>
    <td><%= value.user.try(:username) %></td>
    <td><%= value.encrypted_data %></td>
    <td><%= link_to 'Show', value %></td>
    <td><%= link_to 'Edit', edit_value_path(value) %></td>
    <td><%= link_to 'Destroy', value, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Value', !@user.new_record? ? new_user_value_path(@user) : new_value_path %>
